  <%= form_for @player do |f| %>
  <%= f.label :name, 'Full Name:' %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :position %>
  <%= f.text_field :position %>
  <br>
  <br>
  <%= f.label :team_id %>
  <%= f.select :team_id, Team.all.map { |c| [c.name, c.id] } %>
  <br>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <br>
  <%= f.submit button_text %>
<% end %>